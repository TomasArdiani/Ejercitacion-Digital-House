<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">

	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
		integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<% for(product of productosAMostrar) { %>
			<% if(product.category == 'visited'){%>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/detail/<%= product.id %>/visited">
						<figure class="product-box_image">
							<img src="/images/products/<%= product.image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$<%= product.price %></h2>
							<% if(product.discount != '0'){%>
							<span><%= product.discount %>% OFF</span>
							<% }%>

							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
				<% }%>
			<% }%>







			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<% for(product of productosAMostrar) { %>
			<% if(product.category == 'in-sale'){%>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/detail/<%= product.id %>/in-sale">
						<figure class="product-box_image">
							<img src="/images/products/<%= product.image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">

							<span><%= product.discount %>% OFF</span>
							<!-- <p><%= product.name %></p>-->
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
				<% }%>
			<% }%>
		</div>
	</div>
	<!-- /ultima visita -->


	<!-- footer -->
	<%- include('partials/footer') %>

	<!-- /footer -->
	<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
		integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
		crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
		integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
		crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
		integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
		crossorigin="anonymous"></script>
</body>

</html>